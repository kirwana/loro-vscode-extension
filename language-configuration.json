{
    "comments": {
        "blockComment": [ "{#", "#}" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["{{", "}}"],
        ["{%", "%}"],
        ["{#", "#}"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
        ["{{", "}}"],
        ["{%", "%}"],
        ["{#", "#}"]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
        ["{{", "}}"],
        ["{%", "%}"],
        ["{#", "#}"]
    ],
    "folding": {
        "markers": {
            "start": "^\\s*{%\\s*(if|for|while|function|capture|case|tablerow|with|wrap)\\b",
            "end": "^\\s*{%\\s*(endif|endfor|endwhile|endfunction|endcapture|endcase|endtablerow|endwith|endwrap)\\b"
        }
    },
    "indentationRules": {
        "increaseIndentPattern": "^\\s*{%\\s*(if|for|while|function|capture|case|when|tablerow|with|wrap|else|elsif|elseif)\\b.*$",
        "decreaseIndentPattern": "^\\s*{%\\s*(endif|endfor|endwhile|endfunction|endcapture|endcase|endtablerow|endwith|endwrap|else|elsif|elseif)\\b.*$"
    },
    "wordPattern": "[a-zA-Z_$][a-zA-Z0-9_$]*"
}